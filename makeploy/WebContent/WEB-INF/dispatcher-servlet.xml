		</list> </property> </bean> -->
<mvc:interceptors>  
        <mvc:interceptor>   
             <mvc:mapping path="/**.html" />
            <mvc:mapping path="/**.do" />
            <bean class="com.onway.web.controller.mng.AuthInterceptor" /> 
            
        </mvc:interceptor>  
    </mvc:interceptors> 
	<mvc:resources mapping="/css/**" location="classpath:/htdocs/templates/css/" cache-period="300"/>
	<mvc:resources mapping="/js/**"  location="classpath:/htdocs/templates/js/" cache-period="300"/>
	<mvc:resources mapping="/images/**"  location="classpath:/htdocs/templates/images/" cache-period="300"/>
	<mvc:resources mapping="/files/**"  location="classpath:/htdocs/templates/files/" cache-period="300"/>
	<mvc:resources mapping="/fonts/**"  location="classpath:/htdocs/templates/fonts/" cache-period="300"/>
	<mvc:resources mapping="/img/**"  location="classpath:/htdocs/templates/img/" cache-period="300"/>
	<mvc:resources mapping="/fx/**"  location="classpath:/htdocs/templates/fx/" cache-period="300"/>
	<mvc:resources mapping="/html/**"  location="classpath:/htdocs/templates/html/" cache-period="300"/>
	<mvc:default-servlet-handler /> 

</beans>
